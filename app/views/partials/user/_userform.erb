<table>
  <tr>
    <td><label for="username">Username</label></td>
    <td><%= text_field_tag :username,nil,:class=>"login-credentials"%></td>
  </tr>
<tr>
  <td><label for="password">Password</label></td>
  <td><%= password_field_tag :password,nil,:class=>"login-credentials"%></td>
</tr>
</table>
<div class="login_error"><%= flash[:login_error]%></div>
<%= submit_tag "Login" %>