<% if @profile.lives.size > 0%>
<table>
	<tr>
		<th>Beneficiary Name</th>
		<th>Relationship with Employee</th>
		<th>Percentage</th>
	</tr>
	<%@profile.lives.each do |dependent|%>
	<tr>
		<td><%=dependent.name%></td>
		<td><%=dependent.relationship%></td>
		<td><%=dependent.percentage%></td>
		<%if @current_user.role == "admin" or @current_user.role == "superadmin" %>
			<td><%=link_to "Edit", edit_life_insurance_path(@profile.id, dependent.id),:class=>'button-link'%></td>
			<td><%=link_to "Delete", delete_life_insurance_path(@profile.id, dependent.id),:class=>'button-link'%></td>
		<%end%>
	</tr>
	<%end%>
</table>
<% else %>
	Life insurance beneficiary details not provided
	<br>
<%end%>